<%unless @vote.nil?%>
	<%= form_for(@newvote, remote: true) do |f| %>
		<%= f.hidden_field :image_id, :value => @image.id %>
		<%= f.hidden_field :user_id, :value => @user.id %>
		<%= f.submit 'Voted!', :disabled=>'disabled'%>
	<% end %>
<%else%>
<%= form_for(@newvote, remote: true) do |f| %>
	<%= f.hidden_field :image_id, :value => @image.id %>
	<%= f.hidden_field :user_id, :value => @user.id %>
	<%= f.submit 'Vote' %>
<% end %>
<% end %>

