<p id="notice"><%= notice %></p>
<p>
  <img width = "978" height= "500" src="<%= @image.url %>" />
</p>

<p>
  <b>Sol:</b>
  <%= @image.sol %>
</p>

<p>
  <b>URL:</b>
  <%= @image.url %>
</p>

<p>
  <b>Score:</b>
  <%= @votes.count%>
</p>

<%if @vote.nil?%>
	<%= form_for(@newvote, :remote => true) do |f| %>
		<%= f.hidden_field :image_id, :value => @image.id %>
		<%= f.hidden_field :user_id, :value => @user.id %>
		<div class = "actions">
		<%= f.submit "Vote for Image" %> </div>
	<% end %>
<%else%>
	<%= "Already Voted for this image." %>	
<%end%>

<h2>Your Questions</h2>

<%if @comments.empty?%>
	<%if current_user%>
		<p>You have asked no Questions.</p>
	<%end%>
<%else%>
	<%@comments.each do |comment|%>
	<p>Comment <%= comment.id%>: <%= comment.body%></p>
	<%end%>
<%end%>

<%if current_user%>

<h2>Ask a Question:</h2>
<div id="new_comment">
	<%= form_for(@comment, :remote => true) do |f| %>
		<div class="field">
  		<%= f.text_field :body, :autofocus => true %>
		<%= f.hidden_field :image_id, :value => @image.id%>
		<%= f.hidden_field :user_id, :value => @user.id%></div>
		<div class = "actions"><%= f.submit "Submit Question" %></div>
	<% end %>
</div>
<!--div id="comments-container">
  <%#= render :partial => @comments %>
</div-->
<%else%>
	<p>
	<div id = "Signin"> You must <%= link_to "Sign In", new_user_session_path, :remote => true %> to add a comment.</div>
	</p>
<%end%>
 
