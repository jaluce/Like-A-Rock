<p id="notice"><%= notice %></p>
<p>
  <img width = "978" height= "1000" src="<%= @image.url %>" />
</p>

<p>
  <b>Sol:</b>
  <%= @image.sol %>
</p>

<p>
  <b>URL:</b>
  <%= @image.url %>
</p>

<p>
  <b>Score:</b>
  <%= @votes.count%>
</p>

<%if admin_signed_in?%>
	<h2>Questions:</h2>
	<%if @comments.empty?%>
			<p>There are no Questions for this image.</p>
	<%else%>
		<%@comments.each do |comment|%>
		<p>Comment <%= comment.id%>: <%= comment.body%></p>
		<%end%>
	<%end%>
	
	<h1>Respond</h1>

	<%= form_for(@newresponse) do |f| %>
	<div><%= f.label :body %><br />
	<%= f.text_field :body, :autofocus => true %></div>
	<%= f.hidden_field :image_id, :value => @image.id%>
	<%= f.hidden_field :admin_id, :value => current_admin.id%>
	<div><%= f.submit "Respond" %></div>
	
<% end %>
<%else%>
	<%if @vote.nil?%>
		<%= form_for(@newvote) do |f| %>
			<%= f.hidden_field :image_id, :value => @image.id %>
			<%= f.hidden_field :user_id, :value => @user.id %>
			<div><%= f.submit "Vote for Image" %></div>
		<% end %>
	<%else%>
		<%= "Already Voted for this image." %>	
	<%end%>

	<h2>Your Questions</h2>
	
	<%if @comments.empty?%>
		<%if current_user%>
			<p>You have asked no Questions.</p>
		<%end%>
	<%else%>
		<%@comments.each do |comment|%>
		<p>Comment <%= comment.id%>: <%= comment.body%></p>
		<%end%>
	<%end%>
	
	<%if current_user%>
		<h2>Ask a Question:</h2>
		<%= form_for(@comment) do |f| %>
	  		<%= f.text_field :body, :autofocus => true %></div>
			<%= f.hidden_field :image_id, :value => @image.id%>
			<%= f.hidden_field :user_id, :value => @user.id%>
			<div><%= f.submit "Submit Question" %></div>
		<% end %>
	<%else%>
		<p>You must <%= link_to "Sign In", new_user_session_path%> to add a comment.</p>
	<%end%>
<%end%>
 
 <h2>Responses:</h2>
 <%if @responses.empty?%>
		<p>There are no responses.</p>
	<%else%>
		<%@responses.each do |response|%>
		<p>Response <%= response.id%>: <%= response.body%></p>
		<%end%>
	<%end%>
 
<br />

