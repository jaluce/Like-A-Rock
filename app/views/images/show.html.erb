<p id="notice"><%= notice %></p>

<p>
  <b>Image:</b>
  <img width="25%" height="25%" src="<%= @image.url %>" />
</p>

<p>
  <b>Sol:</b>
  <%= @image.sol %>
</p>

<h2>Comments</h2>
<%= render @image.comments %>

<h2>Add a comment:</h2>
<%= form_for([@image, @image.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
 
<br />

<%= link_to 'Edit', edit_image_path(@image) %> |
<%= link_to 'Back', images_path %>
