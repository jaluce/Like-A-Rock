<% if @album.sol == -1%>
	<h1>Popular Images</h1>
<%else%>
	<h1>Sol <%= @album.sol%> </h1>
<%end%>
<p><%= link_to "New Image", new_album_image_path(@album)%></p>
<p><%= link_to "Delete Album", album_path, :method => "delete"%></p>
<script type="text/javascript" src="/assets/contentflow.js"></script>
<script type="text/javascript" src="/assets/ContentFlowAddOn_white.js"></script>

  <div class="ContentFlow">
    <div class="loadIndicator"><div class="indicator"></div></div>
    <div class="flow">
      <% @images.each do |img| %>
			<%# sleep 1.5 %>
			<%# img.each do |image|%>
				<img class="item" href= "<%= album_image_path(img.album, img)%>" src="<%= img.url %>" title="<%= img.id %>"/>
			<%# end %>
      <% end %>
    </div>
    <div class="globalCaption"></div>
    <div class="scrollbar"><div class="slider"><div class="position"></div></div></div>
  </div>

